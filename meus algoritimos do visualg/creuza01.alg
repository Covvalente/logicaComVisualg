algoritmo "Creuza01"
// Função :
// Autor :
// Data : 03/05/2023
// Seção de Declarações 
var
   ano_atual,ano_nasc,idade:inteiro
inicio
       Escreva ("em que ano estamos?")
       leia (ano_atual)
       Escreva ( "em que ano eu nasci?")
       leia (ano_nasc)
       idade <- ano_atual-ano_nasc
       Escreva ("minha idade sera",idade)
 
 
fimalgoritmo
